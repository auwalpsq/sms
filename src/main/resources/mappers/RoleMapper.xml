<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sms.mappers.RoleMapper">
    <resultMap id="roleResultMap" type="com.sms.entities.Role">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
    </resultMap>

    <!-- Basic CRUD Operations -->
    <select id="findById" resultMap="roleResultMap">
        SELECT * FROM roles WHERE id = #{id}
    </select>

    <select id="findByName" resultMap="roleResultMap" parameterType="String">
        SELECT * FROM roles WHERE name = #{name}
    </select>

    <select id="findAll" resultMap="roleResultMap">
        SELECT * FROM roles ORDER BY name
    </select>

    <insert id="insertRole" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO roles (name, description)
        VALUES (#{name}, #{description})
    </insert>

    <update id="updateRole">
        UPDATE roles SET
        name = #{name},
        description = #{description}
        WHERE id = #{id}
    </update>

    <delete id="deleteRole">
        DELETE FROM roles WHERE id = #{id}
    </delete>

    <!-- User-Role Relationship Operations -->
    <select id="findRolesByUserId" resultMap="roleResultMap">
        SELECT r.* FROM roles r
        JOIN user_roles ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>

    <insert id="addRoleToUser">
        INSERT INTO user_roles (user_id, role_id)
        VALUES (#{userId}, #{roleId})
    </insert>

    <delete id="removeRoleFromUser">
        DELETE FROM user_roles
        WHERE user_id = #{userId} AND role_id = #{roleId}
    </delete>

    <!-- Bulk Operations -->
    <insert id="addRolesToUser">
        INSERT INTO user_roles (user_id, role_id)
        VALUES
        <foreach collection="roleIds" item="roleId" separator=",">
            (#{userId}, #{roleId})
        </foreach>
    </insert>

    <!-- Utility Queries -->
    <select id="countRoles" resultType="int">
        SELECT COUNT(*) FROM roles
    </select>

    <select id="roleExists" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM roles WHERE id = #{id})
    </select>

    <select id="roleNameExists" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM roles WHERE name = #{name})
    </select>
</mapper>