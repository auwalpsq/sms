<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sms.mappers.SubjectMapper">

    <resultMap id="SubjectResultMap" type="com.sms.entities.Subject">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="section" property="section"/>
    </resultMap>

    <insert id="save" parameterType="com.sms.entities.Subject" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO subject (name, code, section)
        VALUES (#{name}, #{code}, #{section})
    </insert>

</mapper>