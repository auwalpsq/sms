<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sms.mappers.StudentMapper">

    <resultMap id="studentResultMap" type="com.sms.entities.Student">
        <id property="id" column="id"/>
        <result property="firstName" column="first_name"/>
        <result property="lastName" column="last_name"/>
        <result property="gender" column="gender"/>
        <result property="dateOfBirth" column="date_of_birth"/>
        <result property="admissionStatus" column="admission_status"/>
        <result property="guardian.id" column="guardian_id"/>
    </resultMap>

    <select id="findByGuardianId" resultMap="studentResultMap">
        SELECT * FROM students WHERE guardian_id = #{guardianId}
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO students (
        first_name, last_name, gender, date_of_birth, admission_status, guardian_id
        ) VALUES (
        #{firstName}, #{lastName}, #{gender}, #{dateOfBirth}, #{admissionStatus}, #{guardian.id}
        )
    </insert>

    <update id="update" parameterType="com.sms.entities.Student">
        UPDATE students
        SET
        first_name = #{firstName},
        last_name = #{lastName},
        gender = #{gender},
        date_of_birth = #{dateOfBirth},
        admission_status = #{admissionStatus}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM students WHERE id = #{id}
    </delete>

</mapper>